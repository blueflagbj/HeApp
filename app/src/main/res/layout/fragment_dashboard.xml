<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_Dashboard"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_loadXls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="导入数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Dashboard" />

    <Button
        android:id="@+id/button_doing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="开始处理"
        app:layout_constraintLeft_toRightOf="@id/button_loadXls"
        app:layout_constraintTop_toTopOf="@id/button_loadXls" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="停止处理"
        app:layout_constraintLeft_toRightOf="@id/button_doing"
        app:layout_constraintTop_toTopOf="@id/button_doing" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/button_loadXls"
        app:layout_constraintTop_toBottomOf="@id/button_loadXls">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>